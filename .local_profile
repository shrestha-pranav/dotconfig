# ssh helper function 
# Usage: shh username servername
# Add servers with servie[server_alias]='server_address'
declare -A servie

function shh {
  if [[ $# -eq 2 ]]; then ssh "$1@${servie[$2]}"
  else echo "Usage: shh username server"
  fi
}

# start all sessions in tmux by default
[[ $SHLVL -eq 1 ]] && tux
